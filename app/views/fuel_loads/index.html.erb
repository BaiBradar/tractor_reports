<h1>Fuel loads</h1>

<table>
 
   
    
  <tr> 
    <th>Amount</th>   
    <th>Loaded at</th> 
    <th>Tractor</th>  
    <th>Tractor driver</th>
    <th></th> 
    <th></th> 
    <th></th> 
  </tr> 
 
<% @fuel_loads.each do |fuel_load| %> 
  <tr> 
    <td><%= fuel_load.amount %></td>
    <td><%= fuel_load.loaded_at %></td> 
    <td><%= fuel_load.tractor_code %></td> 
    <td><%= fuel_load.tractor_driver_name %></td> 
    <td><%= link_to 'Show loads for driver', load_for_driver_path(:tractor_driver_name => fuel_load.tractor_driver_name) %></td>
    <td><%= link_to 'Show loads of tractor', load_for_tractor_path(:tractor_code => fuel_load.tractor_code) %></td> 
  </tr> 
<% end %> 
</table> 

